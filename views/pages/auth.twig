{% extends 'main_template.twig' %}

{% block top_css %}
	<link rel="stylesheet" href="{{ config.base_url }}build/css/login.min.css">
{% endblock %}

{% block authform %}
	<section class="login">
		<div class="login-block">
			<h2 class="login-block__head">Авторизуйтесь</h2>
			<div class="login-block__error">
				Ошибка на сервере..
			</div>
			<form action="#" class="formLogin">
				<p class="formLogin__label">Логин</p>
				<input type="text"
							 name="user"
							 class="formLogin__name"
							 placeholder="Введите логин"
							 qtip-content="введите логин"
							 autofocus>

				<p class="formLogin__label">Пароль</p>
				<input type="password"
							 name="pass"
							 class="formLogin__pass"
							 placeholder="Введите пароль"
							 qtip-content="введите пароль"
				>
				<button type="submit" class="btn btn--login">Войти</button>
			</form>
		</div><!-- .login-block -->
	</section><!-- .login -->
{% endblock %}

{% block scripts %}
	<script src="{{ config.base_url }}build/js/vendor.min.js"></script>
	<script src="{{ config.base_url }}build/js/workingForms.min.js"></script>
	<script src="{{ config.base_url }}build/js/login.min.js"></script>
{% endblock %}